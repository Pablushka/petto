# Environment Configuration Template
# Copy this file to .env and fill in your values

# Required for production - generate a strong random key
# Use: openssl rand -hex 32 or python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-256-bit-random-secret-key-here

# Environment: development, staging, production
ENVIRONMENT=development

# Database URL - for production use PostgreSQL/MySQL
DATABASE_URL=sqlite://db.sqlite3

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Token expiration times (optional - defaults shown)
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=3