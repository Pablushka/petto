{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "main:app",
                "--port", "8000", 
                "--reload",
                "--log-level", "debug"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal",
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Debug SvelteKit Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug FastAPI (Production Mode)",
            "type": "debugpy", 
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "main:app",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack (Frontend + Backend)",
            "configurations": [
                "Debug FastAPI Backend",
                "Debug SvelteKit Frontend"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            }
        }
    ]
}