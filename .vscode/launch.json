    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "main:app",
                "--port", "8000", 
                "--reload",
                "--log-level", "debug"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal",
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "Debug FastAPI (Production Mode)",
            "type": "debugpy", 
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "main:app",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${workspaceFolder}/backend/.venv/bin/python",
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal"
        }
    ]
}